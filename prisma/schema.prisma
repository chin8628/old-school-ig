datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Photo {
  id           Int       @id @default(autoincrement())
  fileName     String?
  createdAt    DateTime? @default(now())
  shutterSpeed String?
  fNumber      String?
  maker        String?
  model        String?
  lensModel    String?
  createDate   DateTime?
  imageHeight  String?
  imageWidth   String?
  iso          String?
  focalLength  String?
  story        String?

  vibeSongId Int?
  vibeSong   VibeSong? @relation(fields: [vibeSongId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  Profile   Profile? @relation(fields: [profileId], references: [id])
  profileId Int?
}

model VibeSong {
  id        Int     @id @default(autoincrement())
  youtubeId String?
  startTime Int?
  endTime   Int?
  photo     Photo[]
}

model Profile {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  displayName String
  shortBio    String
  avatarUrl   String?
  photo       Photo[]
  user        User    @relation(fields: [userId], references: [id])
  userId      Int     @unique
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  publicUserId String @unique
  username     String @unique
  email        String
  password     String
  salt         String

  profile Profile?
  Photo   Photo[]
}
